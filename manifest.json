{
    "manifest_version": 3,
    "name": "WatchNet",
    "version": "1.0",
    "description": "Classify the type of a URL using a trained Naive Bayes model.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  